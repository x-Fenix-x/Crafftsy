<!DOCTYPE html>
<html lang="en">


<%- include('partials/head') %>

    <body class="register">
        <%- include('partials/header') %>
            <main class="container">
                <div class="row">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <div class="card">
                            <div class="card-header">
                                <h4>Registrate</h4>
                            </div>
                            <div class="card-body">
                                <form action="/profile" class="row">
                                    <div class="col-12 col-md-6 mb-3">
                                        <label class="form-label" for="name">Nombre</label>
                                        <input class="form-control" id="name" type="text" name="name" required>
                                    </div>
                                    <div class="col-12 col-md-6 mb-3">
                                        <label for="surname" class="form-label">Apellido</label>
                                        <input class="form-control" id="surname" type="text" name="surname">
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label" for="email">Email</label>
                                        <input class="form-control" id="email" type="email" name="email">
                                    </div>
                                    <div class="col-12 col-md-6 mb-3">
                                        <label class="form-label" for="password">Contraseña</label>
                                        <input class="form-control" id="password" type="password" name="password">
                                    </div>
                                    <div class="col-12 col-md-6 mb-3">
                                        <label class="form-label" for="password2">Confirme su contraseña</label>
                                        <input class="form-control" id="password2" type="password" name="password2">
                                    </div>
                                    <div class="col-12 mb-3 d-flex justify-content-end gap-3">
                                        <button type="reset" class="buttons buttons__secondary">Limpiar</button>
                                        <button type="submit" class="buttons buttons__primary">Enviar</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
    </body>

</html>